@using BusinessLogicLayer.Handler.ReviewHandler.DTOs
@model List<ReviewListItemDto>

@{
    ViewData["Title"] = "Şüpheli Yorum Denetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">
            <i class="bi bi-shield-exclamation"></i> Moderatör Denetim Masası
        </h2>
        <span class="badge bg-dark">Toplam @Model.Count Yorum</span>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Ürün ID</th>
                        <th>Puan</th>
                        <th>Yorum Metni</th>
                        <th>Tarih</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted">#@item.ProductId</td>
                            <td>
                                @for (int i = 0; i < item.Rating; i++)
                                {
                                    <i class="bi bi-star-fill text-warning small"></i>
                                }
                            </td>
                            <td class="text-wrap" style="max-width: 400px;">@item.Content</td>
                            <td>@item.ReviewDate.ToShortDateString()</td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-outline-danger me-1">Sil</button>
                                <button class="btn btn-sm btn-outline-secondary">Onayla</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>